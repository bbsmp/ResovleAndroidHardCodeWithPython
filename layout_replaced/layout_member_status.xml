<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_84dp_size"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/li_white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/li_16dp_size"
    android:gravity="center_vertical"
    android:paddingRight="@dimen/li_11dp_size">
    <ImageView
        android:id="@+id/memberIv"
        android:layout_width="@dimen/li_36dp_size"
        android:layout_height="@dimen/li_36dp_size"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_im_vip" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/memberIv"
        android:paddingLeft="@dimen/li_12dp_size">
        <LinearLayout
            android:id="@+id/member_name_Ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/usernameTv"
                tools:text="@string/hui_yuan_ming"
                android:singleLine="true"
                android:maxEms="10"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/li_16sp_size" />
            <ImageView
                android:layout_width="@dimen/li_16dp_size"
                android:layout_height="@dimen/li_16dp_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/li_8dp_size"
                android:visibility="gone"
                android:src="@drawable/ic_vip" />
        </LinearLayout>
        <TextView
            android:id="@+id/memberDurationTv"
            tools:text="@string/ni_hai_bu_shi_hui_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxEms="19"
            android:layout_below="@id/member_name_Ll"
            android:textSize="@dimen/li_12sp_size" />
    </RelativeLayout>
    <Button
        android:id="@+id/toBeMemberBtn"
        style="@style/common_button_style"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/li_36dp_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/kai_tong_hui_yuan"
        android:paddingLeft="@dimen/li_8dp_size"
        android:paddingRight="@dimen/li_8dp_size"
        android:layout_gravity="center_vertical"
        android:textColor="@color/li_white"
        android:textSize="@dimen/li_16sp_size" />
</LinearLayout>
