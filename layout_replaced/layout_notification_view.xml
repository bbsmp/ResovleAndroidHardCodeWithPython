<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/li_64dp_size"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <ImageView
        android:id="@+id/notification_large_icon"
        android:layout_width="@dimen/li_64dp_size"
        android:layout_height="@dimen/li_64dp_size"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        />
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/li_10dp_size"
        android:layout_marginTop="@dimen/li_5dp_size"
        android:layout_toRightOf="@+id/notification_large_icon"
        android:text="@string/Title"
        android:textColor="@color/color_black"/>
    <TextView
        android:id="@+id/notification_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_title"
        android:layout_marginLeft="@dimen/li_10dp_size"
        android:layout_toRightOf="@+id/notification_large_icon"
        android:text="@string/Message"
        android:textColor="@color/color_black"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_text"
        android:layout_marginLeft="@dimen/li_10dp_size"
        android:textSize="@dimen/li_10sp_size"
        android:layout_toRightOf="@+id/notification_large_icon"
        tools:text="@string/hei_hei_tou_tou_ting_gao_"
        android:textColor="@color/color_black"/>
    <ImageView
        android:id="@+id/notification_small_icon"
        android:layout_width="@dimen/li_24dp_size"
        android:layout_height="@dimen/li_24dp_size"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/li_5dp_size"
        android:layout_marginBottom="@dimen/li_5dp_size"
        android:src="@drawable/ic_launcher" />
</RelativeLayout>