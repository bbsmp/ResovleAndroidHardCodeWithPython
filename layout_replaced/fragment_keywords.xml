<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fragment"
            type="com.gyiscas.smartbidding.ui.qualifyScobKeywords.KeyWordsFragment" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/light_grey">
                <TextView
                    android:id="@+id/keywords_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/li_16dp_size"
                    android:layout_marginRight="@dimen/li_16dp_size"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:text="@string/qing_xuan_ze_zeng_jia_gua"
                    android:textColor="@color/grey_title"
                    android:textSize="@dimen/li_16sp_size" />
                <RelativeLayout
                    android:id="@+id/my_keywords_rl"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@id/keywords_title"
                    android:layout_marginLeft="@dimen/li_16dp_size"
                    android:layout_marginRight="@dimen/li_16dp_size"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:background="@drawable/lv_corner_item">
                    <!--<RecyclerView-->
                    <!--android:layout_width=""-->
                    <!--android:layout_height=""></RecyclerView>-->
                    <GridView
                        android:id="@+id/keywords_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:horizontalSpacing="@dimen/li_3dp_size"
                        android:numColumns="3"
                        android:verticalSpacing="@dimen/li_3dp_size"></GridView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/li_6dp_size"
                        android:padding="@dimen/li_6dp_size"
                        android:text="@string/li_ru_jian_zhu_gong_cheng"
                        android:textColor="@color/grey_title"
                        android:textSize="@dimen/li_14sp_size"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/my_keywords_rl"
                    android:layout_marginBottom="@dimen/li_15dp_size"
                    android:layout_marginTop="@dimen/li_35dp_size"
                    android:gravity="center">
                    <Button
                        android:id="@+id/id_submit_btn"
                        style="@style/common_button_style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/li_40dp_size"
                        android:layout_marginLeft="@dimen/li_16dp_size"
                        android:layout_marginRight="@dimen/li_16dp_size"
                        android:padding="@dimen/li_6dp_size"
                        android:text="@string/sunmit_btn"
                        android:textColor="@color/white"
                        android:textSize="@dimen/li_17sp_size" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</layout>
