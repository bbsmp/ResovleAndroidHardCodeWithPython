<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="fragment"
            type="com.gyiscas.smartbidding.ui.personalCenter.PersonalCenterFragment" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/header_overlay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_40dp_size"
            android:layout_below="@+id/frame"
            android:background="?attr/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/us_center_layout"
                android:layout_width="0dp"
                android:background="@drawable/selector_red_corners_layout"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/li_24dp_size"
                    android:layout_height="@dimen/li_24dp_size"
                    android:background="@drawable/us_center"
                    />
                <TextView
                    android:id="@+id/us_center_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yong_hu_zhong_xin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/li_20sp_size" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/li_1px_size"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/li_white" />
            <LinearLayout
                android:id="@+id/setting_layout"
                android:layout_width="0dp"
                android:background="@drawable/selector_red_corners_layout"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/li_24dp_size"
                    android:layout_height="@dimen/li_24dp_size"
                    android:background="@drawable/setting"
                    />
                <TextView
                    android:id="@+id/setting_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/she_zhi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/li_20sp_size" />
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_overlay"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_below="@id/homeToolBarView"
                    android:id="@+id/my_huiyuan_ll"
                    style="@style/common_lv_corners_item_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/li_6dp_size"
                    android:layout_marginRight="@dimen/li_6dp_size"
                    android:layout_marginTop="@dimen/li_8dp_size"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/li_24dp_size"
                        android:layout_height="@dimen/li_24dp_size"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_im_vip"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/li_8dp_size"
                        android:layout_weight="1"
                        android:text="@string/wo_de_hui_yuan"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/li_16sp_size" />
                    <ImageView
                        android:layout_width="@dimen/li_10dp_size"
                        android:layout_height="@dimen/li_10dp_size"
                        android:alpha="0.6"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/my_huiyuan_ll"
                    android:id="@+id/center_of_cc_ll"
                    style="@style/common_lv_corners_item_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/li_6dp_size"
                    android:layout_marginRight="@dimen/li_6dp_size"
                    android:layout_marginTop="@dimen/li_8dp_size"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/li_24dp_size"
                        android:layout_height="@dimen/li_24dp_size"
                        android:layout_gravity="center"
                        android:src="@drawable/zhongcai" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/li_8dp_size"
                        android:layout_weight="1"
                        android:text="@string/gui_yang_zhong_cai_wei_yu"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/li_16sp_size" />
                    <ImageView
                        android:layout_width="@dimen/li_10dp_size"
                        android:layout_height="@dimen/li_10dp_size"
                        android:alpha="0.6"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/data_analysis_of_cc_ll"
                    style="@style/common_lv_corners_item_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/center_of_cc_ll"
                    android:layout_marginLeft="@dimen/li_6dp_size"
                    android:layout_marginRight="@dimen/li_6dp_size"
                    android:layout_marginTop="@dimen/li_1px_size"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/li_24dp_size"
                        android:layout_height="@dimen/li_24dp_size"
                        android:layout_gravity="center"
                        android:src="@drawable/shuju" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/li_8dp_size"
                        android:layout_weight="1"
                        android:text="@string/shu_ju_fen_xi_zhong_xin"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/li_16sp_size" />
                    <ImageView
                        android:layout_width="@dimen/li_10dp_size"
                        android:layout_height="@dimen/li_10dp_size"
                        android:alpha="0.6"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/userSuggest_ll"
                    style="@style/common_lv_corners_item_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/data_analysis_of_cc_ll"
                    android:layout_marginLeft="@dimen/li_6dp_size"
                    android:layout_marginRight="@dimen/li_6dp_size"
                    android:layout_marginTop="@dimen/li_8dp_size"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/li_24dp_size"
                        android:layout_height="@dimen/li_24dp_size"
                        android:layout_gravity="center"
                        android:src="@drawable/fankui" />
                    <TextView
                        android:id="@+id/userSuggest_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/li_8dp_size"
                        android:layout_weight="1"
                        android:text="@string/yong_hu_fan_kui"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/li_16sp_size" />
                    <ImageView
                        android:layout_width="@dimen/li_10dp_size"
                        android:layout_height="@dimen/li_10dp_size"
                        android:alpha="0.6"
                        android:focusable="false"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/service_tel_layout"
                    style="@style/common_lv_corners_item_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/userSuggest_ll"
                    android:layout_marginLeft="@dimen/li_6dp_size"
                    android:layout_marginRight="@dimen/li_6dp_size"
                    android:layout_marginTop="@dimen/li_8dp_size"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/li_24dp_size"
                        android:layout_height="@dimen/li_24dp_size"
                        android:layout_gravity="center"
                        android:src="@drawable/kefu" />
                    <TextView
                        android:id="@+id/service_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/li_8dp_size"
                        android:layout_weight="1"
                        android:text="@string/lian_xi_dian_hua"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/li_16sp_size" />
                    <ImageView
                        android:layout_width="@dimen/li_10dp_size"
                        android:layout_height="@dimen/li_10dp_size"
                        android:alpha="0.6"
                        android:focusable="false"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
                <Button
                    android:id="@+id/id_logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_40dp_size"
                    android:layout_below="@id/service_tel_layout"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/li_6dp_size"
                    android:layout_marginRight="@dimen/li_6dp_size"
                    android:layout_marginTop="@dimen/li_8dp_size"
                    style="@style/button_borderless"
                    android:background="@drawable/selector_button_outlogin_item"
                    android:padding="@dimen/li_6dp_size"
                    android:text="@string/tui_chu_deng_lu"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/li_18sp_size"/>
            </RelativeLayout>
        </ScrollView>
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_156dp_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/example">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/header_image_rl"
                android:layout_width="@dimen/li_96dp_size"
                android:layout_height="@dimen/li_96dp_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/li_40dp_size">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/li_96dp_size"
                    android:layout_height="@dimen/li_96dp_size"
                    android:src="@drawable/ic_launcher"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="@dimen/li_2dp_size" />
                <ImageView
                    android:layout_width="@dimen/li_24dp_size"
                    android:layout_height="@dimen/li_24dp_size"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/li_content_black"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_is_vip"
                    android:textSize="@dimen/li_12sp_size"
                    android:visibility="visible" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/underImg_userinfo_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/aboveimg_username_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:alpha="0.9"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="@string/username"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:textSize="@dimen/li_22sp_size" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>