<?xml version="1.0" encoding="utf-8"?>
<layout
    >
    <data>
        <variable
            name="activity"
            type="com.gyiscas.smartbidding.ui.qualifyScobKeywords.SelectQualifyActivity" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/id_f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/id_appbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">
                <com.gyiscas.smartbidding.ui.widget.ToolBarView
                    android:id="@+id/toolbarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.AppBarLayout>
            <TextView
                android:id="@+id/id_sure_textview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/li_30dp_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/li_15dp_size"
                android:focusable="false"
                android:gravity="center_vertical"
                android:padding="@dimen/li_2dp_size"
                android:text="@string/que_ding"
                android:textColor="@color/white"
                android:textSize="@dimen/li_16sp_size"
                android:visibility="gone" />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/id_f"
            android:background="@color/grey">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/li_6dp_size"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <RelativeLayout
                    android:id="@+id/fram_searchview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lv_corner_item"
                    android:layout_marginTop="@dimen/li_2dp_size"
                    android:padding="0dp"
                    android:layout_marginBottom="@dimen/li_4dp_size"
                    >
                    <android.support.v7.widget.SearchView
                        android:id="@+id/id_search_view"
                        android:layout_marginTop="@dimen/li_2dp_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textFilter"
                        >
                    </android.support.v7.widget.SearchView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mei_you_yao_de_zi_zhi_zai"
                        android:textSize="@dimen/li_12sp_size"
                        android:layout_marginRight="@dimen/li_10dp_size"
                        android:paddingBottom="@dimen/li_2dp_size"
                        android:layout_below="@id/id_search_view"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/id_position_tt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fram_searchview"
                    android:layout_marginTop="@dimen/li_2dp_size"
                    android:text="@string/dang_qian_wei_zhi"
                    android:visibility="gone" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/id_position_tt"
                    android:background="@drawable/lv_corner_item"
                    android:orientation="horizontal">
                    <ListView
                        android:id="@+id/id_first_listview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"></ListView>
                    <ListView
                        android:id="@+id/id_second_listview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"></ListView>
                    <ListView
                        android:id="@+id/id_third_listview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"></ListView>
                </LinearLayout>
                <Button
                    android:id="@+id/id_submit_btn"
                    style="@style/common_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_40dp_size"
                    android:layout_marginBottom="@dimen/li_16dp_size"
                    android:layout_marginLeft="@dimen/li_16dp_size"
                    android:layout_marginRight="@dimen/li_16dp_size"
                    android:padding="@dimen/li_6dp_size"
                    android:text="@string/sure"
                    android:textColor="@color/white"
                    android:textSize="@dimen/li_17sp_size"
                    android:visibility="gone" />
                <ListView
                    android:id="@+id/id_search_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/id_position_tt"
                    android:background="@drawable/lv_corner_item"
                    android:visibility="gone">
                </ListView>
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/id_return_floaBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/colorPrimaryDark"
                    fab:fab_icon="@mipmap/ic_fab_back"
                    fab:fab_title="@string/backlast" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>
