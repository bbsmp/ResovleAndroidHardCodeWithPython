<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/li_white"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/li_16dp_size"
        android:layout_marginRight="@dimen/li_16dp_size"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_42.5dp_size"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="@string/qing_xuan_ze_zhi_fu_fang_"
                android:textColor="@color/li_content_black"
                android:textSize="18sp" />
            <ImageView
                android:layout_alignParentRight="true"
                android:id="@+id/closeBtn"
                android:layout_width="@dimen/li_24dp_size"
                android:layout_height="@dimen/li_24dp_size"
                android:layout_marginLeft="@dimen/li_11dp_size"
                android:layout_marginRight="@dimen/li_11dp_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close" />
        </RelativeLayout>
        <TextView
            android:id="@+id/selectedPriceTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_64.5dp_size"
            android:background="@color/li_divider_or_bg"
            android:gravity="center"
            android:textColor="@color/li_content_black"
            android:textSize="@dimen/li_34sp_size"
            tools:text="@string/Â¥666" />
        <LinearLayout
            android:id="@+id/payWithWXLl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_62.5dp_size"
            android:paddingLeft="@dimen/li_11dp_size"
            android:paddingRight="@dimen/li_11dp_size"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:background="@drawable/selector_white_gray_view"
            >
            <ImageView
                android:layout_width="@dimen/li_48dp_size"
                android:layout_height="@dimen/li_48dp_size"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_wx_pay" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/li_6dp_size"
                android:text="@string/wei_xin_zhi_fu"
                android:textColor="@color/li_title_gray"
                android:textSize="@dimen/li_17sp_size" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/li_divider_line_outline" />
        <LinearLayout
            android:id="@+id/payWithALILl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_62.5dp_size"
            android:paddingLeft="@dimen/li_11dp_size"
            android:paddingRight="@dimen/li_11dp_size"
            android:background="@drawable/selector_white_gray_view"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/li_48dp_size"
                android:layout_height="@dimen/li_48dp_size"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_ali_pay" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/li_6dp_size"
                android:text="@string/zhi_fu_bao_zhi_fu"
                android:textColor="@color/li_title_gray"
                android:textSize="@dimen/li_17sp_size" />
        </LinearLayout>
    </LinearLayout>
</layout>
