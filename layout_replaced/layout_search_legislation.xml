<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.widget.Button"/>
        <variable
            name="model"
            type="com.gyiscas.smartbidding.ui.search.searchView.model.LegislationModel" />
        <variable
            name="present"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.DatePresenter"/>
        <variable
            name="activity"
            type="com.gyiscas.smartbidding.ui.search.PublicSearchActivity"/>
        <import type="com.gyiscas.smartbidding.ui.search.choose.view.ChooseView"/>
        <import type="com.gyiscas.smartbidding.utils.Utils"/>
        <variable
            name="choosePresenter"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.ChoosePresenter"/>
    </data>
    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:background="@color/li_white"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/fa_lv_fa_gui_gao_ji_jian_"
            android:textSize="@dimen/li_16sp_size"
            android:visibility="gone"
            android:layout_marginTop="@dimen/li_16dp_size"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_42dp_size"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/li_16dp_size"
            android:orientation="horizontal">
            <Button
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_search_pup_item"
                android:gravity="center"
                android:onClick="@{() -> model.clear()}"
                android:textSize="@dimen/li_18sp_size"
                android:text="@string/zhong_zhi" />
            <Button
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/jian_suo"
                android:background="@drawable/selector_search_pup_button_red"
                android:textSize="@dimen/li_18sp_size"
                android:textColor="@color/li_white" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buttons"
            android:layout_below="@id/title"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/li_16dp_size"
                android:paddingRight="@dimen/li_16dp_size">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/li_16sp_size"
                        android:text="@string/ban_bu_ri_qi" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_search_pup_item"
                        android:textColor="@color/colorGreyBtn"
                        android:textSize="@dimen/li_15sp_size"
                        android:onClick="@{(view) -> present.pickYear(view, model)}"
                        android:text='@{Utils.isEmpty(model.pr_issuedate.get()) ? "" : model.pr_issuedate.get() + "å¹´"}'
                        android:hint="@string/ban_bu_ri_qi" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/li_16sp_size"
                        android:text="@string/ban_bu_dan_wei" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/li_32dp_size"
                        android:background="@drawable/selector_search_pup_item"
                        android:textColor="@color/li_content_black"
                        android:textColorHint="@color/colorGreyBtn"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.pr_issueorg}"
                        android:onClick="@{() -> choosePresenter.startChooseActivity(activity, ChooseView.GET_POLICY_DPT)}"
                        android:hint="@string/ban_bu_dan_wei"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/li_16sp_size"
                        android:text="@string/shi_shi_ri_qi" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_search_pup_item"
                        android:textColor="@color/colorGreyBtn"
                        android:textSize="@dimen/li_15sp_size"
                        app:binding="@{model.pr_implementdate}"
                        android:onClick="@{(view) -> present.pickDate(view)}"
                        android:hint="@string/shi_shi_ri_qi" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/li_16sp_size"
                        android:text="@string/shi_xiao_xing" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/li_2dp_size"
                        android:background="@drawable/selector_search_pup_item"
                        android:padding="@dimen/li_8dp_size"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.pr_timeliness}"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/li_16sp_size"
                        android:text="@string/wen_jian_bian_hao" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/li_2dp_size"
                        android:background="@drawable/selector_search_pup_item"
                        android:padding="@dimen/li_8dp_size"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.pr_FileNum}"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/li_16sp_size"
                        android:text="@string/fa_wen_hao"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/li_2dp_size"
                        android:background="@drawable/selector_search_pup_item"
                        android:padding="@dimen/li_8dp_size"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.pr_Issuenum}"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/li_16sp_size"
                        android:text="@string/biao_ti_guan_jian_zi" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/li_2dp_size"
                        android:background="@drawable/selector_search_pup_item"
                        android:padding="@dimen/li_8dp_size"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.pr_title}"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>