<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gyiscas.smartbidding.ui.search.PublicSearchActivity">
        <com.gyiscas.smartbidding.ui.widget.toolbarWithSearch.ToolBarWithSearchView
            android:id="@+id/toolBarWithSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.gyiscas.smartbidding.ui.widget.toolbarWithSearch.ToolBarWithSearchView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_36dp_size"
            >
        <android.support.design.widget.TabLayout
            android:id="@+id/id_tab_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/li_36dp_size"
            android:background="@color/colorWhite"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/tabTextAppearance"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextColor="@color/half_black" />
            <View
                android:layout_width="@dimen/li_1px_size"
                android:layout_height="@dimen/li_75dp_size"
                android:background="@color/li_divider_line_outline"
                ></View>
            <LinearLayout
                android:id="@+id/id_retrieve_btn"
                android:layout_width="@dimen/li_75dp_size"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/li_4dp_size"
                android:paddingRight="@dimen/li_4dp_size"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="@dimen/li_1px_size"
                android:background="@drawable/selector_white_gray_view"
                >
                <ImageView
                    android:id="@+id/id_retrieve_img"
                    android:layout_width="@dimen/li_16dp_size"
                    android:layout_height="@dimen/li_16dp_size"
                    android:src="@drawable/shaixuan"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/li_6dp_size"
                    android:alpha="0.8"
                    android:tint="@color/colorPrimary"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/id_retrieve_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shai_xuan"
                    android:layout_gravity="center"
                    android:textSize="@dimen/li_14sp_size"
                    android:textColor="@color/colorGreyBtn"
                    />
            </LinearLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/li_1px_size"
        android:background="@color/li_divider_line_outline"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</LinearLayout>
