<?xml version="1.0" encoding="utf-8"?>
<com.gyiscas.smartbidding.ui.vip.widget.VipPriceView
    android:id="@+id/vipPriceView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardColor="@color/li_white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_56dp_size"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/rightDurationTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.8"
        android:gravity="center"
        tools:text="@string/1_nian"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/li_content_black"
        android:textSize="@dimen/li_18sp_size" />
    <View
        android:layout_width="1px"
        android:layout_height="38dp"
        android:background="@color/li_divider_line_outline" />
    <TextView
        android:id="@+id/priceTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.2"
        android:gravity="center"
        tools:text="@string/¥666"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/li_content_black"
        android:textSize="@dimen/li_18sp_size" />
    <TextView
        android:id="@+id/originalPriceTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.2"
        android:gravity="center"
        tools:text="@string/¥888"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@color/li_title_gray"
        android:textSize="@dimen/li_18sp_size" />
</com.gyiscas.smartbidding.ui.vip.widget.VipPriceView>
