<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="userModel"
            type="com.gyiscas.smartbidding.model.UserModel" />
        <variable
            name="signUpActivity"
            type="com.gyiscas.smartbidding.ui.SignUpActivity" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            <com.gyiscas.smartbidding.ui.widget.ToolBarView
                android:id="@+id/toolbarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/id_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarView"
            android:layout_marginLeft="@dimen/li_16dp_size"
            android:layout_marginRight="@dimen/li_16dp_size">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/li_16dp_size">
                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/shou_ji_hao"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/li_15sp_size"
                    app:binding="@{userModel.username}" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/identify_input_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_username_input"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/id_identify_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <EditText
                        android:id="@+id/identify_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/yan_zheng_ma"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/li_15sp_size" />
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/getidentfy_btn"
                    style="@style/common_button_style"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/li_30dp_size"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/li_4dp_size"
                    android:layout_marginLeft="@dimen/li_8dp_size"
                    android:layout_weight="1"
                    android:text="@string/huo_qu_yan_zheng_ma" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/identify_input_ll">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mi_tt_ma"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="招投标登录"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/li_15sp_size"
                    app:binding="@{userModel.password}" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_repassword_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_password_input">
                <EditText
                    android:id="@+id/repassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/zhong_fu_mi_ma"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/li_15sp_size" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/agree_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/id_repassword_input"
                android:layout_marginLeft="@dimen/li_50dp_size"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/checkbox_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="@dimen/li_20dp_size"
                        android:layout_height="@dimen/li_20dp_size"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/li_10dp_size"
                        android:background="@drawable/my_checkbox"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/agree_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tong_yi_yong_hu_xie_yi"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/li_15sp_size" />
            </LinearLayout>
            <Button
                android:id="@+id/next_btn"
                style="@style/common_button_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/li_38dp_size"
                android:layout_marginTop="@dimen/li_50dp_size"
                android:textSize="@dimen/li_20sp_size"
                android:layout_below="@+id/agree_layout"
                android:text="@string/ti_jiao" />
        </RelativeLayout>
    </RelativeLayout>
</layout>