<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            type="com.gyiscas.smartbidding.model.UserModel"
            name="userModel"/>
        <variable
            name="loginActivity"
            type="com.gyiscas.smartbidding.ui.LoginActivity"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="@dimen/li_20dp_size">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/login_circle_logo" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/li_10dp_size"
            android:gravity="center"
            android:layout_weight="2">
            <RelativeLayout
                android:id="@+id/id_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/li_40dp_size"
                android:layout_marginRight="@dimen/li_40dp_size"
                android:layout_marginTop="@dimen/li_25dp_size">
                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_account"
                        android:background="@drawable/login_corner_edittext"
                        android:drawablePadding="@dimen/li_10dp_size"
                        android:hint="@string/shou_ji_hao"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:padding="@dimen/li_8dp_size"
                        android:singleLine="true"
                        android:layout_marginBottom="@dimen/li_16dp_size"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        app:binding="@{userModel.username}"
                        android:textCursorDrawable="@drawable/shape_text_cursor"
                        android:textSize="@dimen/li_15sp_size" />
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawablePadding="@dimen/li_10dp_size"
                        android:background="@drawable/login_corner_edittext"
                        android:hint="密码"
                        android:layout_below="@id/username"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        app:binding="@{userModel.password}"
                        android:padding="@dimen/li_8dp_size"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/shape_text_cursor"
                        android:textSize="@dimen/li_15sp_size" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/loginsetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_login_form"
                android:layout_marginTop="@dimen/li_16dp_size">
                <LinearLayout
                    android:id="@+id/id_remb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/li_50dp_size"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/chkbox_remenberPSD"
                        android:layout_width="@dimen/li_16dp_size"
                        android:layout_height="@dimen/li_16dp_size"
                        android:layout_margin="@dimen/li_5dp_size"
                        android:background="@drawable/login_checkbox"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/remenber_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remenberpsd"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/li_15sp_size" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_forgetpassword"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/li_50dp_size"
                    android:text="@string/fgpassword"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/li_15sp_size" />
            </RelativeLayout>
            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/li_38dp_size"
                style="@style/common_button_style"
                android:text="@string/login_btn"
                android:textColor="@color/light"
                android:layout_below="@id/loginsetting"
                android:textSize="@dimen/li_21sp_size"
                android:layout_marginLeft="@dimen/li_40dp_size"
                android:layout_marginRight="@dimen/li_40dp_size"
                android:layout_marginTop="@dimen/li_14dp_size"
                />
            <LinearLayout
                android:id="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_btn"
                android:layout_marginTop="@dimen/li_10dp_size"
                android:gravity="center"
                android:layout_marginLeft="@dimen/li_40dp_size"
                android:layout_marginRight="@dimen/li_40dp_size"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/li_1px_size"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="or"
                    android:textSize="@dimen/li_21sp_size"
                    android:paddingLeft="@dimen/li_6dp_size"
                    android:paddingRight="@dimen/li_6dp_size"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/li_1px_size"
                    android:background="@color/colorWhite"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/register_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/li_38dp_size"
                android:background="@drawable/login_reg_btn"
                android:text="@string/register_btn"
                android:textColor="@color/light"
                android:layout_below="@id/or"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/li_16dp_size"
                android:textSize="@dimen/li_15sp_size" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/ripple_dialphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/li_2dp_size">
                <TextView
                    android:id="@+id/cinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="贵阳市招标投标行业协会"
                    android:textColor="@color/light"
                    android:textSize="@dimen/li_12sp_size"
                    />
                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cinfo"
                    android:layout_centerHorizontal="true"
                    android:text="0851-82203360"
                    android:textColor="@color/light"
                    android:textSize="@dimen/li_12sp_size"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/li_2dp_size"
                android:text="合作单位：贵阳信息技术研究院(中科院软件所贵阳分部)"
                android:textColor="@color/light"
                android:textSize="@dimen/li_12sp_size" />
        </LinearLayout>
    </LinearLayout>
</layout>