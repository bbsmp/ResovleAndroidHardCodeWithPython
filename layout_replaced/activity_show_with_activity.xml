<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <com.gyiscas.smartbidding.ui.widget.ToolBarView
        android:id="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/li_8dp_size"
        android:paddingRight="@dimen/li_8dp_size">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="true"
                android:editable="false"
                android:gravity="center"
                android:text="@string/biao_ti"
                android:textIsSelectable="true"
                android:textSize="@dimen/li_17sp_size"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:clickable="true"
                android:editable="false"
                android:gravity="right|center_vertical"
                android:text="@string/shi_jian"
                android:textIsSelectable="true"
                android:textSize="@dimen/li_16sp_size"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/li_20dp_size"
                android:background="@null"
                android:clickable="true"
                android:editable="false"
                android:text="@string/nei_rong"
                android:textIsSelectable="true"
                android:textSize="@dimen/li_16sp_size" />
            <TextView
                android:id="@+id/text_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="@dimen/li_20dp_size"
                android:background="@null"
                android:clickable="true"
                android:editable="false"
                android:gravity="center"
                android:text="@string/ri_qi"
                android:visibility="gone"
                android:textIsSelectable="true"
                android:textSize="@dimen/li_16sp_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
