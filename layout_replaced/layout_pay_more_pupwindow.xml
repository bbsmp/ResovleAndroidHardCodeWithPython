<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/li_alpha_6_black"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layoutLl1"
        android:background="@drawable/selector_alpha_black_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/li_4dp_size">
        <ImageView
            android:layout_width="@dimen/li_24dp_size"
            android:layout_height="@dimen/li_24dp_size"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/ic_phone" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/li_8dp_size"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gou_mai_ji_lu"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/li_16sp_size" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/li_1px_size"
        android:visibility="gone"
        android:background="@color/li_white" />
</LinearLayout>