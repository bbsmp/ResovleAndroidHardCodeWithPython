<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/common_gridview_item_style"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="6dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/qualify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/li_5dp_size"
            android:singleLine="true"
            android:textSize="@dimen/li_15sp_size"
            android:text="@string/qualify" />
        <TextView
            android:id="@+id/qualifyDtail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/li_5dp_size"
            android:textSize="@dimen/li_15sp_size"
            android:layout_toRightOf="@id/qualify"
            android:singleLine="true"
            android:text="@string/qualifyDetail" />
    </LinearLayout>
    <ImageButton
        android:layout_width="@dimen/li_20dp_size"
        android:layout_height="@dimen/li_20dp_size"
        android:layout_marginLeft="@dimen/li_3dp_size"
        android:alpha="0.8"
        android:background="@mipmap/jian"
        android:clickable="false"
        android:focusable="false" />
</LinearLayout>
