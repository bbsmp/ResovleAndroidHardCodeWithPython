<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/li_alpha_6_black"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/phone1Ll"
        android:background="@drawable/selector_alpha_black_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/li_4dp_size">
        <ImageView
            android:layout_width="@dimen/li_24dp_size"
            android:layout_height="@dimen/li_24dp_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_phone" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lian_xi_fang_shi_1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/li_15sp_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/li_15sp_size"
                android:text="@string/customer_phone"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/li_1px_size"
        android:background="@color/li_white" />
    <LinearLayout
        android:background="@drawable/selector_alpha_black_view"
        android:id="@+id/phone2Ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/li_4dp_size">
        <ImageView
            android:layout_width="@dimen/li_24dp_size"
            android:layout_height="@dimen/li_24dp_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_phone" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lian_xi_fang_shi_2"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/li_15sp_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/li_15sp_size"
                android:text="@string/technology_phone"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>