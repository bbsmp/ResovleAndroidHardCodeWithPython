<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/li_8dp_size"
        android:paddingRight="@dimen/li_8dp_size">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/li_5dp_size"
                android:textSize="@dimen/li_16sp_size"
                android:textColor="@color/red_light" />
            <RelativeLayout
                android:id="@+id/fuck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_tv_title">
                <TextView
                    android:id="@+id/id_fuck_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingBottom="@dimen/li_5dp_size"
                    android:paddingLeft="@dimen/li_5dp_size"
                    android:textSize="@dimen/li_16sp_size"
                    android:paddingRight="@dimen/li_5dp_size"
                    android:textColor="#777" />
                <TextView
                    android:id="@+id/id_fuck_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:textSize="@dimen/li_16sp_size"
                    android:paddingBottom="@dimen/li_5dp_size"
                    android:paddingLeft="@dimen/li_5dp_size"
                    android:paddingRight="@dimen/li_5dp_size"
                    android:textColor="#777" />
            </RelativeLayout>
            <TextView
                android:id="@+id/id_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fuck"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="true"
                android:editable="false"
                android:gravity="left"
                android:paddingBottom="@dimen/li_5dp_size"
                android:paddingLeft="@dimen/li_50dp_size"
                android:paddingRight="@dimen/li_5dp_size"
                android:textColor="#777"
                android:textIsSelectable="true"
                android:textSize="@dimen/li_16sp_size" />
            <TextView
                android:id="@+id/text_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tv_content"
                android:gravity="center"
                android:paddingBottom="@dimen/li_5dp_size"
                android:paddingLeft="@dimen/li_50dp_size"
                android:paddingRight="@dimen/li_5dp_size"
                android:text="@string/dan_ji_cha_kan_xin_xi_lai"
                android:textColor="@color/grey"
                android:textSize="@dimen/li_16sp_size"
                android:visibility="gone" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/id_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/li_1px_size"
            android:background="@color/cardview_shadow_start_color"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>