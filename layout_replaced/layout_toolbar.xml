<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_56dp_size"
    android:background="?attr/colorPrimary"
    app:popupTheme="@style/AppTheme.PopupOverlay">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/nav_left_Tv"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/li_24dp_size"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/li_8dp_size"
            android:paddingBottom="@dimen/li_8dp_size"
            android:paddingLeft="@dimen/li_16dp_size"
            android:paddingRight="@dimen/li_16dp_size"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:filterTouchesWhenObscured="true"
            android:textSize="@dimen/li_18sp_size"
            android:drawableLeft="@drawable/nav_back"
            android:background="@drawable/selector_alpha_black_view"
            />
        <ImageView
            android:id="@+id/nav_right_Im"
            android:layout_width="@dimen/li_48dp_size"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/li_8dp_size"
            android:paddingBottom="@dimen/li_8dp_size"
            android:paddingLeft="@dimen/li_8dp_size"
            android:paddingRight="@dimen/li_8dp_size"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:filterTouchesWhenObscured="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@drawable/selector_alpha_black_view"
            tools:src="@drawable/ic_contact_us" />
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/li_white"
            android:textSize="@dimen/li_20sp_size"
            android:maxLines="1"
            android:maxEms="12"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/li_24dp_size"
            android:layout_marginRight="@dimen/li_24dp_size"
            tools:text="@string/biao_ti" />
    </RelativeLayout>
</LinearLayout>
