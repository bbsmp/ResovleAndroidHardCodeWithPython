<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.gyiscas.smartbidding.ui.widget.ToolBarView
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_34dp_size"
            android:background="@color/li_divider_line_outline"
            android:paddingBottom="@dimen/li_1px_size">
            <android.support.design.widget.TabLayout
                android:id="@+id/id_tab_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/li_white"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabIndicatorHeight="@dimen/li_2.5dp_size"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextAppearance="@style/tabTextAppearance"
                app:tabTextColor="@color/half_black">
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ji_ben_xin_xi" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gu_dong_xin_xi" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fen_zhi_ji_gou" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gong_si_zi_zhi" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/biao_zhang_xin_xi" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bu_liang_ji_lu" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suo_can_jia_zhao_tou_biao" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qi_ye_chan_pin_xin_xi" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shou_quan_chan_pin_xin_xi" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ren_yuan_xin_xi" />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bian_geng_ji_lu" />
            </android.support.design.widget.TabLayout>
            <View
                android:layout_width="@dimen/li_1px_size"
                android:layout_height="@dimen/li_75dp_size"
                android:background="@color/li_divider_line_outline"></View>
            <LinearLayout
                android:id="@+id/id_expand_btn"
                android:layout_width="@dimen/li_75dp_size"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/li_1px_size"
                android:background="@drawable/selector_white_gray_view"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/li_4dp_size"
                android:paddingRight="@dimen/li_4dp_size">
                <ImageView
                    android:id="@+id/id_expand_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/li_6dp_size"
                    android:src="@drawable/ic_expand_on" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar_layout"
        android:focusable="true"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <include
            layout="@layout/layout_progress_bar"
            android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>
