<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.gyiscas.smartbidding.ui.home.HomeFragment" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="@dimen/li_34dp_size">
                <TextView
                    android:layout_width="@dimen/li_56dp_size"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/li_15sp_size"
                    android:textColor="@color/li_white"
                    android:text="@string/gong_gao"
                    android:gravity="center"
                    />
                <com.gyiscas.smartbidding.CustomViews.ScrollInfo
                    android:id="@+id/scroll_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </com.gyiscas.smartbidding.CustomViews.ScrollInfo>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/searchBox"
                android:layout_width="match_parent"
                android:layout_height="@dimen/li_40dp_size"
                android:layout_margin="@dimen/li_11dp_size"
                android:background="@drawable/selector_home_search_box"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/li_12dp_size">
                <ImageView
                    android:layout_width="@dimen/li_18dp_size"
                    android:layout_height="@dimen/li_18dp_size"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_home_search"
                    android:tint="@color/li_home_search_box_text_color" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/li_5dp_size"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/qing_shu_ru_xiang_mu_qi_y"
                    android:textColor="@color/li_home_search_box_text_color"
                    android:textSize="@dimen/li_12.5sp_size" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/li_112dp_size"
                android:layout_below="@id/searchBox"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/li_11dp_size"
                android:background="@color/li_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/bidLL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_white_gray_view"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/li_48dp_size"
                        android:layout_height="@dimen/li_48dp_size"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/home_call_bid"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/li_12.5dp_size"
                        android:textSize="@dimen/li_15sp_size"
                        android:text="@string/zhao_biao_gong_gao" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/li_1px_size"
                    android:layout_height="@dimen/li_73dp_size"
                    android:background="@color/li_divider_line_outline" />
                <LinearLayout
                    android:id="@+id/winbidLL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/selector_white_gray_view"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/li_48dp_size"
                        android:layout_height="@dimen/li_48dp_size"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/home_win_bid"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/li_12dp_size"
                        android:gravity="center"
                        android:textSize="@dimen/li_15sp_size"
                        android:text="@string/zhong_biao_gong_gao" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_30dp_size"
                    android:background="@color/li_white"
                    android:paddingLeft="@dimen/li_11dp_size"
                    android:paddingRight="@dimen/li_11dp_size"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/chang_yong_gong_ju"
                        android:textColor="@color/li_content_black"
                        android:textSize="@dimen/li_15sp_size" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/ic_more"
                        android:text="@string/geng_duo"
                        android:visibility="gone"
                        android:textColor="@color/li_home_search_box_text_color"
                        android:textSize="@dimen/li_15sp_size" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_1px_size"
                    android:background="@color/li_divider_line_outline"
                    />
                <com.gyiscas.smartbidding.CustomViews.MyGridView
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/li_1px_size"
                    android:gravity="center_vertical"
                    android:horizontalSpacing="@dimen/li_1px_size"
                    android:numColumns="3"
                    android:verticalSpacing="@dimen/li_1px_size">
                </com.gyiscas.smartbidding.CustomViews.MyGridView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/todayP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/li_11dp_size"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_30dp_size"
                    android:background="@color/li_white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/li_11dp_size"
                    android:paddingRight="@dimen/li_11dp_size"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/jin_ri_geng_xin"
                        android:gravity="center"
                        android:textColor="@color/li_content_black"
                        android:textSize="@dimen/li_15sp_size" />
                    <TextView
                        android:id="@+id/todayMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:drawableRight="@drawable/ic_more"
                        android:text="@string/geng_duo"
                        android:visibility="gone"
                        android:textColor="@color/li_home_search_box_text_color"
                        android:textSize="@dimen/li_15sp_size" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_1px_size"
                    android:background="@color/li_divider_line_outline"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/updateRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hotP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/li_11dp_size"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_30dp_size"
                    android:background="@color/li_white"
                    android:paddingLeft="@dimen/li_11dp_size"
                    android:paddingRight="@dimen/li_11dp_size"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/zui_xin_biao_xun"
                        android:textColor="@color/li_content_black"
                        android:textSize="@dimen/li_15sp_size" />
                    <TextView
                        android:id="@+id/hotMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawableRight="@drawable/ic_more"
                        android:text="@string/geng_duo"
                        android:visibility="gone"
                        android:textColor="@color/li_home_search_box_text_color"
                        android:textSize="@dimen/li_15sp_size" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_1px_size"
                    android:background="@color/li_divider_line_outline"
                    />
                <com.gyiscas.smartbidding.ui.widget.verticalMarquee.VerticalMarqueeView
                    android:id="@+id/verticalMarqueeView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/li_96dp_size">
                </com.gyiscas.smartbidding.ui.widget.verticalMarquee.VerticalMarqueeView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>