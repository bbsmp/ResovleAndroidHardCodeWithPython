<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_title"
        android:textSize="@dimen/li_20sp_size"
        android:layout_marginTop="@dimen/li_14dp_size"
        android:text="@string/yong_hu_fan_kui"
        android:gravity="center_vertical"
        />
    <EditText
        android:id="@+id/advice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/li_16dp_size"
        android:singleLine="true"
        android:textColor="@color/grey_title"
        android:textSize="@dimen/li_16sp_size"
        android:hint="@string/biao_ti"
        android:padding="@dimen/li_6dp_size"
        android:background="@drawable/shape_corner_edittext"
        />
    <EditText
        android:id="@+id/advice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/li_16dp_size"
        android:gravity="start"
        android:textColor="@color/grey_title"
        android:textSize="@dimen/li_16sp_size"
        android:hint="@string/fan_kui_nei_rong"
        android:padding="@dimen/li_6dp_size"
        android:minLines="5"
        android:background="@drawable/shape_corner_edittext"
        />
</LinearLayout>
