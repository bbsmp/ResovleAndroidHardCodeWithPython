<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_56dp_size"
    android:background="?attr/colorPrimary"
    android:focusable="true"
    android:clickable="true"
    app:popupTheme="@style/AppTheme.PopupOverlay">
    <RelativeLayout
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/nav_back_im"
            android:background="@drawable/selector_alpha_black_view"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/li_24dp_size"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:paddingTop="@dimen/li_8dp_size"
            android:paddingBottom="@dimen/li_8dp_size"
            android:paddingLeft="@dimen/li_16dp_size"
            android:paddingRight="@dimen/li_16dp_size"
            android:layout_centerVertical="true"
            android:filterTouchesWhenObscured="true"
            android:src="@drawable/nav_back" />
        <Button
            android:id="@+id/searchBtn"
            android:layout_width="@dimen/li_56dp_size"
            android:layout_height="@dimen/li_34dp_size"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_search_button"
            android:text="@string/sou_suo"
            android:textSize="@dimen/li_16sp_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/li_16dp_size"
            android:layout_marginLeft="@dimen/li_11dp_size"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="@dimen/li_6dp_size"
            />
        <EditText
            android:id="@+id/searchInputBoxEt"
            android:layout_toLeftOf="@id/searchBtn"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nav_back_im"
            android:backgroundTint="@color/li_white"
            android:foregroundTint="@color/li_white"
            android:drawableRight="@drawable/ic_clear"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/li_white"
            android:ellipsize="end"
            android:textSize="@dimen/li_18sp_size"
            android:imeOptions="actionSearch"
            android:textColor="@color/li_white"
            android:textCursorDrawable="@drawable/shape_text_cursor"
            android:paddingRight="@dimen/li_12dp_size"
            />
        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/li_white"
            android:textSize="@dimen/li_20sp_size"
            android:maxLines="1"
            android:maxEms="12"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/li_36dp_size"
            android:layout_marginRight="@dimen/li_36dp_size"
            android:visibility="gone"
            tools:text="@string/biao_ti" />
    </RelativeLayout>
</LinearLayout>
