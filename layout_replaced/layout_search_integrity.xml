<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.gyiscas.smartbidding.ui.search.searchView.model.IntegrityModel" />
        <variable
            name="present"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.DatePresenter" />
        <variable
            name="areaPresent"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.AreaPresenter" />
        <variable
            name="activity"
            type="com.gyiscas.smartbidding.ui.search.PublicSearchActivity" />
        <import type="com.gyiscas.smartbidding.ui.search.choose.view.ChooseView" />
        <import type="android.view.View"/>
        <variable
            name="choosePresenter"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.ChoosePresenter" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/li_white"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/li_16dp_size"
            android:gravity="center_horizontal"
            android:text="@string/cheng_xin_xin_xi_gao_ji_j"
            android:textSize="@dimen/li_16sp_size"
            android:textStyle="bold"
            android:visibility="gone" />
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/li_16dp_size"
            android:orientation="horizontal">
            <Button
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_search_pup_item"
                android:gravity="center"
                android:onClick="@{() -> model.clear()}"
                android:text="@string/zhong_zhi"
                android:textSize="@dimen/li_18sp_size" />
            <Button
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_search_pup_button_red"
                android:gravity="center"
                android:text="@string/jian_suo"
                android:textColor="@color/li_white"
                android:textSize="@dimen/li_18sp_size" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buttons"
            android:layout_below="@id/title"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/li_16dp_size"
                android:paddingRight="@dimen/li_16dp_size">
                <android.support.design.widget.TabLayout
                    android:id="@+id/id_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/li_white"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabIndicatorHeight="@dimen/li_2.5dp_size"
                    app:tabMode="fixed"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextAppearance="@style/tabTextAppearance"
                    app:tabTextColor="@color/half_black">
                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/biao_zhang_xin_xi" />
                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chu_fa_xin_xi" />
                </android.support.design.widget.TabLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/qi_ye_ming_cheng"
                        android:textSize="@dimen/li_16sp_size" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/li_2dp_size"
                        android:background="@drawable/selector_search_pup_item"
                        android:padding="@dimen/li_8dp_size"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.com_name}" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bzLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:visibility="@{model.showZFdpt.get() ? View.GONE : View.VISIBLE}"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/biao_zhang_bu_men"
                        android:textSize="@dimen/li_16sp_size" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_search_pup_item"
                        android:hint="@string/biao_zhang_bu_men"
                        android:minHeight="@dimen/li_32dp_size"
                        android:onClick="@{() -> choosePresenter.startChooseActivity(activity, ChooseView.GET_HONEST_BZ_DPT)}"
                        android:textColor="@color/li_content_black"
                        android:textColorHint="@color/colorGreyBtn"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.ch_recorg}" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/di_qu"
                        android:textSize="@dimen/li_16sp_size" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/li_32dp_size"
                        android:layout_marginTop="@dimen/li_2dp_size"
                        android:background="@drawable/selector_search_pup_item"
                        android:hint="@string/di_qu"
                        android:onClick="@{(view) -> areaPresent.pickArea(view, model)}"
                        android:textSize="@dimen/li_16sp_size" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cfLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:visibility="@{model.showZFdpt.get() ? View.VISIBLE : View.GONE}"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chu_fa_bu_men"
                        android:textSize="@dimen/li_16sp_size" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_search_pup_item"
                        android:hint="@string/chu_fa_bu_men"
                        android:minHeight="@dimen/li_32dp_size"
                        android:onClick="@{() -> choosePresenter.startChooseActivity(activity, ChooseView.GET_HONEST_CF_DPT)}"
                        android:textColor="@color/li_content_black"
                        android:textColorHint="@color/colorGreyBtn"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.ch_punishment_dpt}" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fa_bu_shi_jian"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/start_time"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/li_32dp_size"
                            android:layout_weight="1"
                            android:background="@drawable/selector_search_pup_item"
                            android:hint="@string/qi_shi_shi_jian"
                            android:onClick="@{(view) -> present.pickDate(view)}"
                            android:textColor="@color/colorGreyBtn"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.timebeigin}" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/li_8dp_size"
                            android:layout_marginRight="@dimen/li_8dp_size"
                            android:text="@string/G_L_t_x_A_e" />
                        <Button
                            android:id="@+id/end_time"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/li_32dp_size"
                            android:layout_weight="1"
                            android:background="@drawable/selector_search_pup_item"
                            android:hint="@string/jie_shu_shi_jian"
                            android:onClick="@{(view) -> present.pickDate(view)}"
                            android:textColor="@color/colorGreyBtn"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.timeends}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/guan_jian_zi"
                        android:textSize="@dimen/li_16sp_size" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/li_2dp_size"
                        android:background="@drawable/selector_search_pup_item"
                        android:padding="@dimen/li_8dp_size"
                        android:textSize="@dimen/li_16sp_size"
                        app:binding="@{model.title}" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>