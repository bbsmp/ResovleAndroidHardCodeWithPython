<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_gray_view"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/li_16dp_size"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/li_title_gray"
            android:textSize="@dimen/li_15sp_size"
            tools:text="@string/gui_yang_shi"
            android:paddingTop="@dimen/li_2dp_size"
            android:paddingBottom="@dimen/li_2dp_size"
            android:paddingRight="@dimen/li_16dp_size"
            android:paddingLeft="@dimen/li_16dp_size"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/bid_count"
            android:padding="@dimen/li_2dp_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/li_title_gray"
            android:textSize="@dimen/li_14sp_size"
            tools:text="@string/zhao_biao_24"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/winbid_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/li_title_gray"
            android:textSize="@dimen/li_14sp_size"
            tools:text="@string/zhong_biao_54"
            android:padding="@dimen/li_2dp_size"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <View
        android:id="@+id/dividerLine"
        android:layout_width="@dimen/li_1px_size"
        android:layout_height="match_parent"
        android:background="@color/li_divider_line_outline"
        android:layout_marginTop="@dimen/li_16dp_size"
        android:layout_marginBottom="@dimen/li_16dp_size"
        />
</LinearLayout>