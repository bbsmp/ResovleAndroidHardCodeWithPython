<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_85dp_size"
    android:background="@drawable/selector_lv_corners_item"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/li_8dp_size">
        <com.jauker.widget.BadgeView
            android:id="@+id/id_badgeview"
            android:layout_width="@dimen/li_10dp_size"
            android:layout_height="@dimen/li_10dp_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/li_4dp_size"
            android:layout_marginTop="@dimen/li_4dp_size"
            android:text="@string/noread"
            android:textSize="@dimen/li_15sp_size"
            android:textColor="@color/colorPrimary"></com.jauker.widget.BadgeView>
        <TextView
            android:id="@+id/content_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/id_badgeview"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:maxEms="40"
            android:maxLines="1"
            android:textColor="@color/li_content_black"
            android:textSize="@dimen/li_16sp_size" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/li_8dp_size"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/content_org_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:textColor="@color/li_title_gray"
            android:textSize="@dimen/li_15sp_size"
            tools:text="@string/ssss" />
        <TextView
            android:id="@+id/content_date_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/li_title_gray"
            android:textSize="@dimen/li_15sp_size"
            tools:text="@string/umeng_socialize_send_btn_str" />
    </LinearLayout>
</LinearLayout>
