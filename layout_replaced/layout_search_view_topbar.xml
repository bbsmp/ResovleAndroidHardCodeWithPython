<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/li_8dp_size"
        android:paddingRight="@dimen/li_8dp_size"
        >
        <ImageView
            android:id="@+id/id_search"
            android:layout_width="@dimen/li_30dp_size"
            android:layout_height="@dimen/li_30dp_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/li_6dp_size"
            android:background="@drawable/ic_search" />
        <TextView
            android:id="@+id/pick_text_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/li_32dp_size"
            android:layout_alignBaseline="@id/id_search"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/li_2dp_size"
            android:background="@drawable/ic_pick_bg"
            android:contextClickable="true"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:singleLine="true"
            android:textColor="@color/action_bar_title_color"
            android:textSize="@dimen/li_18sp_size"
            android:visibility="gone"
            tools:text="@string/qi_ye" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_32dp_size"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_toLeftOf="@id/id_search"
            android:layout_toRightOf="@id/pick_text_view"
            android:layout_weight="6"
            android:background="@drawable/shape_corner_search_edittext"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:id="@+id/id_delete"
                android:layout_width="@dimen/li_20dp_size"
                android:layout_height="@dimen/li_20dp_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone" />
            <EditText
                android:id="@+id/id_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/li_8dp_size"
                android:layout_toLeftOf="@id/id_delete"
                android:layout_weight="6"
                android:background="@null"
                android:padding="@dimen/li_6dp_size"
                tools:text="@string/shouso"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textSize="@dimen/li_14sp_size" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
