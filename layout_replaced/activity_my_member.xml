<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/activity_my_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.gyiscas.smartbidding.ui.vip.MyMemberActivity">
        <com.gyiscas.smartbidding.ui.widget.ToolBarView
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.gyiscas.smartbidding.ui.widget.ToolBarView>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/memberIv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:background="@mipmap/banner_vip" />
                <com.gyiscas.smartbidding.ui.vip.widget.MemberStatusView
                    android:id="@+id/memberStatusView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.gyiscas.smartbidding.ui.vip.widget.MemberStatusView>
                <LinearLayout
                    android:id="@+id/accountConnectLl"
                    style="@style/common_lv_corners_item_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/li_11dp_size"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/li_24dp_size"
                        android:layout_height="@dimen/li_24dp_size"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        tools:src="@drawable/fankui" />
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/li_8dp_size"
                        android:layout_weight="1"
                        android:textColor="@color/li_content_black"
                        android:textSize="@dimen/li_16sp_size"
                        android:text="@string/guan_lian_zhang_hu" />
                    <ImageView
                        android:layout_width="@dimen/li_12dp_size"
                        android:layout_height="@dimen/li_12dp_size"
                        android:alpha="0.6"
                        android:focusable="false"
                        android:src="@mipmap/arrow" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/li_11dp_size"
                    android:background="@color/li_white">
                    <LinearLayout
                        android:id="@+id/headerLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/li_48dp_size"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/li_16dp_size"
                            android:paddingRight="@dimen/li_16dp_size"
                            android:text="@string/VIP_te_quan"
                            android:textColor="@color/li_content_black"
                            android:textSize="@dimen/li_18sp_size" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/li_1px_size"
                            android:background="@color/li_divider_line_outline" />
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </android.support.v7.widget.RecyclerView>
                    <LinearLayout
                        android:id="@+id/footerLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/li_1px_size"
                            android:background="@color/li_divider_line_outline" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/li_34dp_size"
                            android:gravity="center"
                            android:paddingLeft="@dimen/li_16dp_size"
                            android:paddingRight="@dimen/li_16dp_size"
                            android:text="@string/jing_qing_qi_dai"
                            android:textColor="@color/li_title_gray"
                            android:textSize="@dimen/li_15sp_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
