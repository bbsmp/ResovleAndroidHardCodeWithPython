<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/li_8dp_size"
        android:paddingRight="@dimen/li_8dp_size">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/li_5dp_size"
                tools:text="@string/biao_ti"
                android:textSize="@dimen/li_15sp_size"
                android:textColor="@color/red_light" />
            <TextView
                android:id="@+id/contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTv"
                android:layout_weight="1"
                android:background="@null"
                android:clickable="true"
                android:editable="false"
                android:gravity="left"
                android:paddingBottom="@dimen/li_5dp_size"
                android:paddingLeft="@dimen/li_50dp_size"
                android:paddingRight="@dimen/li_5dp_size"
                android:textColor="#777"
                tools:text="@string/shi_wo_bing_bu_shi"
                android:textIsSelectable="true"
                android:textSize="@dimen/li_16sp_size" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/id_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/li_1px_size"
            android:background="@color/cardview_shadow_start_color"
            android:orientation="horizontal"
            android:visibility="gone"
            >
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>