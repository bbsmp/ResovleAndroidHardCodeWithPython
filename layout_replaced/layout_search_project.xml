<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="model"
            type="com.gyiscas.smartbidding.ui.search.searchView.model.ProjectModel" />
        <variable
            name="datePresent"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.DatePresenter" />
        <variable
            name="areaPresent"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.AreaPresenter" />
        <variable
            name="activity"
            type="com.gyiscas.smartbidding.ui.search.PublicSearchActivity" />
        <import type="com.gyiscas.smartbidding.ui.search.choose.view.ChooseView" />
        <variable
            name="choosePresenter"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.ChoosePresenter" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/li_white"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/li_16dp_size"
            android:gravity="center_horizontal"
            android:text="@string/xiang_mu_xin_xi_gao_ji_ji"
            android:textSize="@dimen/li_16sp_size"
            android:textStyle="bold"
            android:visibility="gone" />
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_42dp_size"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/li_16dp_size"
            android:orientation="horizontal">
            <Button
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_search_pup_item"
                android:gravity="center"
                android:onClick="@{() -> model.clear()}"
                android:text="@string/zhong_zhi"
                android:textSize="@dimen/li_18sp_size" />
            <Button
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_search_pup_button_red"
                android:gravity="center"
                android:text="@string/jian_suo"
                android:textColor="@color/li_white"
                android:textSize="@dimen/li_18sp_size" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buttons"
            android:layout_below="@id/title"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/li_16dp_size"
                android:paddingRight="@dimen/li_16dp_size"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/di_qu"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/li_32dp_size"
                            android:background="@drawable/selector_search_pup_item"
                            android:hint="@string/di_qu"
                            android:onClick="@{(view) -> areaPresent.pickArea(view, model)}"
                            android:textColor="@color/colorGreyBtn"
                            android:textSize="@dimen/li_15sp_size"
                            app:binding="@{model.c_name}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shen_pi_dan_wei"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_search_pup_item"
                            android:padding="@dimen/li_8dp_size"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.ao_name}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ye_zhu_fang"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_search_pup_item"
                            android:padding="@dimen/li_8dp_size"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.org_name}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shi_jian_duan"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="@dimen/li_32dp_size"
                            android:layout_weight="1"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "起始时间" : "仅会员可用"}'
                            android:onClick="@{(view) -> datePresent.pickDate(view)}"
                            android:textColor="@color/colorGreyBtn"
                            android:textSize="@dimen/li_15sp_size"
                            app:binding="@{model.beginDate}" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/li_8dp_size"
                            android:layout_marginRight="@dimen/li_8dp_size"
                            android:text="@string/G_L_t_x_A_e" />
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="@dimen/li_32dp_size"
                            android:layout_weight="1"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "结束时间" : "仅会员可用"}'
                            android:onClick="@{(view) -> datePresent.pickDate(view)}"
                            android:textColor="@color/colorGreyBtn"
                            android:textSize="@dimen/li_15sp_size"
                            app:binding="@{model.endDate}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zhao_tou_biao_lei_xing"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "招投标类型" : "仅会员可用"}'
                            android:minHeight="@dimen/li_32dp_size"
                            android:onClick="@{() -> choosePresenter.startChooseActivity(activity, ChooseView.GET_PROJECT_BID_TYPE)}"
                            android:textColor="@color/li_content_black"
                            android:textColorHint="@color/colorGreyBtn"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bc_name}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zhao_biao_fang_shi"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "招标方式" : "仅会员可用"}'
                            android:minHeight="@dimen/li_32dp_size"
                            android:onClick="@{() -> choosePresenter.startChooseActivity(activity, ChooseView.GET_PROJECT_BID_WAY)}"
                            android:textColor="@color/li_content_black"
                            android:textColorHint="@color/colorGreyBtn"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bt_name}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fu_ze_ren"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "" : "仅会员可用"}'
                            android:padding="@dimen/li_8dp_size"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bo_orgname}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dai_li_ji_gou"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "" : "仅会员可用"}'
                            android:padding="@dimen/li_8dp_size"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.agent}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dai_li_ji_gou_fu_ze_ren"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "" : "仅会员可用"}'
                            android:padding="@dimen/li_8dp_size"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bo_Zdirector}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/xiang_mu_yu_suan_wan_yuan"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/li_2dp_size"
                            android:layout_weight="1"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "" : "仅会员可用"}'
                            android:inputType="number"
                            android:padding="@dimen/li_8dp_size"
                            android:singleLine="true"
                            android:text='@{model.bid_budgetMin.get()}'
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bid_budgetMin}" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/li_8dp_size"
                            android:layout_marginRight="@dimen/li_8dp_size"
                            android:text="@string/G_L_t_x_A_e" />
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/li_2dp_size"
                            android:layout_weight="1"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "" : "仅会员可用"}'
                            android:inputType="number"
                            android:padding="@dimen/li_8dp_size"
                            android:singleLine="true"
                            android:text='@{model.bid_budgetMax.get()}'
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bid_budgetMax}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="@{model.isVip.get() ? View.VISIBLE : View.GONE}">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zhong_biao_jin_e_qu_jian_"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/li_2dp_size"
                            android:layout_weight="1"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "" : "仅会员可用"}'
                            android:inputType="number"
                            android:padding="@dimen/li_8dp_size"
                            android:singleLine="true"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bo_widAmountMin}" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/li_8dp_size"
                            android:layout_marginRight="@dimen/li_8dp_size"
                            android:text="@string/G_L_t_x_A_e" />
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/li_2dp_size"
                            android:layout_weight="1"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "" : "仅会员可用"}'
                            android:inputType="number"
                            android:padding="@dimen/li_8dp_size"
                            android:singleLine="true"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bo_widAmountMax}" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/zhong_biao_dan_wei"
                        android:textSize="@dimen/li_16sp_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_search_pup_item"
                            android:enabled="@{model.isVip.get()}"
                            android:hint='@{model.isVip.get() ? "" : "仅会员可用"}'
                            android:padding="@dimen/li_8dp_size"
                            android:textSize="@dimen/li_16sp_size"
                            app:binding="@{model.bo_widorg}" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>