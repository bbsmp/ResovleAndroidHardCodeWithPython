    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <com.gyiscas.smartbidding.ui.widget.ToolBarView
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ExpandableListView
        android:id="@+id/section_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/li_1px_size"
        android:divider="@color/md_btn_selected">
    </ExpandableListView>
</LinearLayout>