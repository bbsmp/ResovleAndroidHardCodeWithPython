<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="fragment"
            type="com.gyiscas.smartbidding.ui.qualifyScobKeywords.QualifyFragment" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gyiscas.smartbidding.ui.qualifyScobKeywords.QualifyFragment"
        android:background="@drawable/lv_corner_item"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/company_qualify_BRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/li_5dp_size"
                android:focusable="true"
                android:clickable="true"
                >
                <TextView
                    android:id="@+id/tip_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_title"
                    android:textSize="@dimen/li_14sp_size"
                    android:layout_marginLeft="@dimen/li_16dp_size"
                    android:layout_marginRight="@dimen/li_16dp_size"
                    android:gravity="center"
                    android:text="@string/qing_dian_ji_hao_tian_jia"
                    />
                <LinearLayout
                    android:id="@+id/ll_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tip_text"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/li_16dp_size"
                    style="@style/common_gridview_item_style"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <TextView
                        android:id="@+id/tt_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/li_16sp_size"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_centerVertical="true"
                        android:text="@string/company_qualify" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/li_5dp_size"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/add" />
                </LinearLayout>
            </RelativeLayout>
            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/li_20dp_size"
                android:paddingRight="@dimen/li_20dp_size"
                android:paddingTop="@dimen/li_20dp_size"
                android:scrollbars="none">
            </ListView>
        </LinearLayout>
    </FrameLayout>
</layout>
