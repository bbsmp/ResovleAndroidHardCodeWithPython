<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/li_white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/li_2dp_size"
        android:paddingLeft="@dimen/li_16dp_size"
        android:paddingRight="@dimen/li_2dp_size"
        android:paddingTop="@dimen/li_2dp_size"
        android:textColor="@color/li_title_gray"
        android:textSize="@dimen/li_16sp_size"
        tools:text="@string/gong_si_gu_dong" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/li_64dp_size"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/contentRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left|center_vertical"
            android:padding="@dimen/li_2dp_size" />
        <TextView
            android:id="@+id/no_data_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/li_2dp_size"
            android:text="@string/zan_wu_xin_xi"
            android:textColor="@color/li_content_black"
            android:textSize="@dimen/li_17sp_size"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>