<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


        <com.gyiscas.smartbidding.ui.widget.ToolBarView
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.gyiscas.smartbidding.ui.widget.ToolBarView>


    <RelativeLayout
        android:id="@+id/id_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/li_16dp_size"
        android:layout_marginRight="@dimen/li_16dp_size"
        android:layout_below="@id/toolbarView"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/li_16dp_size"
            >

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="用户名"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/li_14sp_size" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:id="@+id/identify_input_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/id_username_input"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_identify_input"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/identify_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="验证码"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/li_14sp_size" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/getidentfy_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/li_30dp_size"
                android:layout_marginBottom="@dimen/li_4dp_size"
                android:layout_marginLeft="@dimen/li_8dp_size"
                android:text="获取验证码"
                android:layout_gravity="bottom"
                style="@style/common_button_style"/>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/identify_input_ll">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密\t\t码"
                android:imeActionId="@+id/login"
                android:imeActionLabel="招投标登录"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/li_14sp_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_repassword_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_password_input">

            <EditText
                android:id="@+id/repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="重复密码"
                android:imeActionId="@+id/login"
                android:imeActionLabel="招投标登录"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/li_14sp_size" />

        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/next_btn"
            android:layout_below="@+id/id_repassword_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_36dp_size"
            android:layout_marginTop="@dimen/li_50dp_size"
            style="@style/common_button_style"
            android:text="提交"
            />

    </RelativeLayout>



</RelativeLayout>

