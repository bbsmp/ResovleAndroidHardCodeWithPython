<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/progressBar_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_progress_bg"
    android:gravity="center"
    android:layout_gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/li_20dp_size"
        android:paddingRight="@dimen/li_20dp_size"
        android:paddingBottom="@dimen/li_12dp_size"
        android:paddingTop="@dimen/li_12dp_size"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.9"
            />

        <TextView
            android:id="@+id/loadingTipTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载..."
            android:gravity="center"
            android:textSize="@dimen/li_12sp_size"
            android:layout_marginTop="@dimen/li_4dp_size"
            android:textColor="@color/colorWhite"
            android:alpha="1"
            />
    </LinearLayout>
</LinearLayout>
