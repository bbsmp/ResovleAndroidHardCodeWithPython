<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="@dimen/li_16dp_size"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="筛选选项"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按关键字"
            android:textSize="@dimen/li_16sp_size"
            />

        <EditText
            android:id="@+id/key_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/selector_search_pup_item"
            android:padding="@dimen/li_8dp_size"
            android:textSize="@dimen/li_16sp_size"
            />

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="按时间"
            android:textSize="@dimen/li_16sp_size"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <Button
                android:id="@+id/start_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/li_32dp_size"
                android:layout_weight="1"
                android:background="@drawable/selector_search_pup_item"
                android:textColor="@color/colorGreyBtn"
                android:textSize="@dimen/li_16sp_size"
                android:text="起始时间" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/li_8dp_size"
                android:layout_marginRight="@dimen/li_8dp_size"
                android:text="—" />

            <Button
                android:id="@+id/end_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/li_32dp_size"
                android:layout_weight="1"
                android:background="@drawable/selector_search_pup_item"
                android:text="结束时间"
                android:textSize="@dimen/li_16sp_size"
                android:textColor="@color/colorGreyBtn"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/li_42dp_size"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="重置"
            android:textSize="@dimen/li_16sp_size"
            android:background="@drawable/selector_search_pup_item"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/li_16sp_size"
            android:background="@drawable/selector_search_pup_button_red"
            android:textColor="@color/li_white"
            android:text="检索" />


    </LinearLayout>
</RelativeLayout>