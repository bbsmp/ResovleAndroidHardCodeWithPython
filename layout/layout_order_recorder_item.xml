<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/li_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/li_8dp_size"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/order_no_Tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="订单号：16272819191792829192"
            android:textColor="@color/li_content_black"
            android:textSize="@dimen/li_14sp_size"
            android:padding="@dimen/li_4dp_size"
            />
        <TextView
            android:id="@+id/trade_state_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/li_neon_carrot"
            tools:text="生成订单"
            android:minEms="4"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="@dimen/li_14sp_size"
            android:padding="@dimen/li_4dp_size"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/li_1px_size"
        android:background="@color/li_divider_line_outline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/li_8dp_size"
        >

        <TextView
            android:id="@+id/trade_package_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="套餐:"
            android:textSize="@dimen/li_15sp_size"
            android:padding="@dimen/li_4dp_size"
            android:textColor="@color/li_title_gray"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/trade_amount_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="金额:"
            android:textSize="@dimen/li_15sp_size"
            android:padding="@dimen/li_4dp_size"
            android:textColor="@color/li_title_gray"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/trade_time_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="交易时间:"
            android:textSize="@dimen/li_15sp_size"
            android:padding="@dimen/li_4dp_size"
            android:textColor="@color/li_title_gray"
            android:singleLine="true"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/get_invoices_Ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_1px_size"
            android:background="@color/li_divider_line_outline"
            />
        <Button
            android:id="@+id/get_invoices_Btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/li_32dp_size"
            style="@style/button_borderless"
            tools:text="索要发票"
            android:layout_margin="@dimen/li_8dp_size"
            android:textColor="@color/li_tag_checked"
            android:layout_gravity="center"
            android:background="@drawable/selector_btn_checked"
            />
    </LinearLayout>

</LinearLayout>