<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_56dp_size"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_56dp_size"
            android:background="@drawable/shape_corner_search_edittext_light"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/id_search"
                android:layout_width="@dimen/li_30dp_size"
                android:layout_height="@dimen/li_30dp_size"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:alpha="0.6"
                />

            <ImageView
                android:layout_toLeftOf="@id/id_search"
                android:id="@+id/id_delete"
                android:layout_width="@dimen/li_20dp_size"
                android:layout_height="@dimen/li_20dp_size"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:visibility="gone"
                android:layout_centerVertical="true"
                />
            <EditText
                android:layout_toLeftOf="@id/id_delete"
                android:id="@+id/id_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:padding="@dimen/li_6dp_size"
                android:textSize="@dimen/li_14sp_size"
                android:background="@color/colorWhite"
                android:layout_marginLeft="@dimen/li_8dp_size"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:singleLine="true"
                />

        </RelativeLayout>

</LinearLayout>