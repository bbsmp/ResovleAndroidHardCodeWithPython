<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


        <com.gyiscas.smartbidding.ui.widget.ToolBarView
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.gyiscas.smartbidding.ui.widget.ToolBarView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_prompt"
        android:layout_marginTop="@dimen/li_40dp_size"
        android:layout_below="@id/toolbarView"
        android:layout_marginLeft="@dimen/li_16dp_size"
        android:layout_marginRight="@dimen/li_16dp_size"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/li_16dp_size"
            android:layout_marginRight="@dimen/li_16dp_size"
            android:text="更换绑定的手机号之后\n可以用新手机号及当前密码登录"
            android:textSize="@dimen/li_16sp_size"
            android:gravity="center"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/li_20dp_size"
        android:layout_marginLeft="@dimen/li_16dp_size"
        android:layout_marginRight="@dimen/li_16dp_size"
        android:layout_below="@id/id_prompt"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_old_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/li_16dp_size"
            >

            <EditText
                android:id="@+id/old_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="旧号码"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:enabled="false"
                android:textSize="@dimen/li_14sp_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_new_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_old_username_input"
            android:layout_marginTop="@dimen/li_16dp_size"
            >

            <EditText
                android:id="@+id/new_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="新号码"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/li_14sp_size" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/id_new_username_input"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_identify_input"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/identify_code_changetel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="验证码"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/li_14sp_size" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/getidentfy_changetel_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/li_30dp_size"
                android:layout_marginBottom="@dimen/li_4dp_size"
                android:layout_marginLeft="@dimen/li_8dp_size"
                android:text="获取验证码"
                android:layout_gravity="bottom"
                style="@style/common_button_style"/>
        </LinearLayout>




    </RelativeLayout>

    <Button
        android:id="@+id/next_changetel_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/li_38dp_size"
        android:layout_alignParentBottom="true"
        style="@style/common_button_style"
        android:textSize="@dimen/li_20sp_size"
        android:layout_margin="@dimen/li_16dp_size"
        android:text="提交"

        />

</RelativeLayout>

