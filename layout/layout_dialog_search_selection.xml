<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="presenter"
            type="com.gyiscas.smartbidding.ui.search.searchView.presenters.SearchTypePresenter"/>
    </data>

    <LinearLayout
        android:layout_width="@dimen/li_96dp_size"
        android:layout_height="@dimen/li_80dp_size"
        android:background="#95000000"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="招标公告"
            android:textColor="@color/li_white"
            android:focusable="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/li_8dp_size"
            android:paddingRight="@dimen/li_8dp_size"
            android:onClick="@{(v) -> presenter.onSelected(v, 0)}"
            android:textSize="@dimen/li_15sp_size" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/li_8dp_size"
            android:layout_marginRight="@dimen/li_8dp_size"
            android:background="@color/li_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="中标公告"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/li_8dp_size"
            android:paddingRight="@dimen/li_8dp_size"
            android:clickable="true"
            android:textColor="@color/li_white"
            android:onClick="@{(v)  -> presenter.onSelected(v, 1)}"
            android:textSize="@dimen/li_15sp_size" />
</LinearLayout>


</layout>