<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorUnderlineRed"
        android:textSize="@dimen/li_18sp_size"
        android:layout_marginBottom="@dimen/li_20dp_size"
        android:layout_marginLeft="@dimen/li_16dp_size"
        android:layout_marginRight="@dimen/li_16dp_size"
        android:text="      请注意：企业信息填报，请选择“公司”！角色一旦选定，无法更改。"
        android:gravity="left"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">
    <Button
        android:id="@+id/user_personal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/li_4dp_size"
        android:layout_marginLeft="@dimen/li_16dp_size"
        android:layout_marginRight="@dimen/li_16dp_size"
        android:singleLine="true"
        android:textColor="@color/grey_title"
        android:textSize="@dimen/li_16sp_size"
        android:hint="个人用户"
        style="@style/button_borderless"
        android:padding="@dimen/li_6dp_size"
        android:background="@drawable/selector_grey_corners_button"
        />
    <Button
        android:id="@+id/user_company_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/li_4dp_size"
        android:layout_marginLeft="@dimen/li_16dp_size"
        android:layout_marginRight="@dimen/li_16dp_size"
        style="@style/button_borderless"
        android:singleLine="true"
        android:textColor="@color/grey_title"
        android:textSize="@dimen/li_16sp_size"
        android:hint="公司用户"
        android:padding="@dimen/li_6dp_size"
        android:background="@drawable/selector_grey_corners_button"
        />
</LinearLayout>




</LinearLayout>
