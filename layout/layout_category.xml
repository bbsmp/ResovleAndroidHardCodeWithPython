<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_category"
    android:layout_width="match_parent"
    android:layout_height="@dimen/li_36dp_size"
    android:background="@color/light_grey"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/li_1px_size">

    <LinearLayout
        android:id="@+id/id_category_btn1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/li_4dp_size"
        android:paddingRight="@dimen/li_4dp_size"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_white_gray_view"
        >
        <TextView
            android:id="@+id/id_category1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有信息"
            android:layout_gravity="center"
            android:textColor="@color/colorGreyBtn"
            android:textSize="@dimen/li_14sp_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="4"
            />
        <ImageView
            android:id="@+id/id_category1_img"
            android:layout_width="@dimen/li_16dp_size"
            android:layout_height="@dimen/li_16dp_size"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_category_btn2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/li_4dp_size"
        android:paddingRight="@dimen/li_4dp_size"
        android:gravity="center"
        android:layout_marginLeft="@dimen/li_1px_size"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_white_gray_view"
        >
        <TextView
            android:id="@+id/id_category2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有信息"
            android:layout_gravity="center"
            android:textColor="@color/colorGreyBtn"
            android:textSize="@dimen/li_14sp_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="4"
            />
        <ImageView
            android:id="@+id/id_category2_img"
            android:layout_width="@dimen/li_16dp_size"
            android:layout_height="@dimen/li_16dp_size"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_category_btn3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/li_4dp_size"
        android:paddingRight="@dimen/li_4dp_size"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="@dimen/li_1px_size"
        android:background="@drawable/selector_white_gray_view"
        >
        <TextView
            android:id="@+id/id_category3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有信息"
            android:layout_gravity="center"
            android:textColor="@color/colorGreyBtn"
            android:textSize="@dimen/li_14sp_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="4"
            />
        <ImageView
            android:id="@+id/id_category3_img"
            android:layout_width="@dimen/li_16dp_size"
            android:layout_height="@dimen/li_16dp_size"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_retrieve_btn"
        android:layout_width="@dimen/li_75dp_size"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/li_4dp_size"
        android:paddingRight="@dimen/li_4dp_size"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="@dimen/li_1px_size"
        android:background="@drawable/selector_white_gray_view"
        >
        <ImageView
            android:id="@+id/id_retrieve_img"
            android:layout_width="@dimen/li_16dp_size"
            android:layout_height="@dimen/li_16dp_size"
            android:src="@drawable/shaixuan"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/li_6dp_size"
            />
        <TextView
            android:id="@+id/id_retrieve_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:layout_gravity="center"
            android:textSize="@dimen/li_14sp_size"
            android:textColor="@color/colorGreyBtn"

            />

    </LinearLayout>

</LinearLayout>