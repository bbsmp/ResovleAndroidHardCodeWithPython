<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="acticity"
            type="com.gyiscas.smartbidding.ui.CenterActivity"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <com.gyiscas.smartbidding.ui.widget.ToolBarView
                android:id="@+id/toolbarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.gyiscas.smartbidding.ui.widget.ToolBarView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            >
                <ListView
                    android:id="@+id/news_listView"
                    android:layout_width="match_parent"
                    android:background="@color/light_grey"
                    android:dividerHeight="@dimen/li_11dp_size"
                    android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/id_nodataLoaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/sad"
                    android:alpha="0.3"/>
                <TextView
                    android:id="@+id/id_datainfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:text="暂无数据,点击加载！"
                    />

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</layout>