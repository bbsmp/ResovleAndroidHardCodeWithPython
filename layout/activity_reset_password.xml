<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <com.gyiscas.smartbidding.ui.widget.ToolBarView
        android:id="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:id="@+id/id_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/li_16dp_size"
        android:layout_marginRight="@dimen/li_16dp_size"
        android:layout_below="@id/toolbarView"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/li_16dp_size"
            >

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="用户名"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/li_15sp_size"
                android:enabled="false" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_old_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_username_input">

            <EditText
                android:id="@+id/oldpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="旧密码"
                android:imeActionId="@+id/login"
                android:imeActionLabel="招投标登录"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/li_15sp_size" />

        </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/findPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记了?点我找回"
                android:textSize="@dimen/li_11sp_size"
                android:layout_below="@id/id_old_password_input"
                android:layout_alignParentRight="true"
                />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/findPassword">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="新密码"
                android:imeActionId="@+id/login"
                android:imeActionLabel="招投标登录"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/li_15sp_size" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/id_repassword_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_password_input">

            <EditText
                android:id="@+id/repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="重复新密码"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/li_15sp_size" />

        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_38dp_size"
            style="@style/common_button_style"
            android:layout_below="@+id/id_repassword_input"
            android:textSize="@dimen/li_20sp_size"
            android:text="提交"
            android:layout_marginTop="@dimen/li_50dp_size"
            />

    </RelativeLayout>



</RelativeLayout>

