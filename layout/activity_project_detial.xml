<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.gyiscas.smartbidding.ui.widget.ToolBarView
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/li_34dp_size"
            android:background="@color/li_divider_line_outline"
            android:paddingBottom="@dimen/li_1px_size">

            <android.support.design.widget.TabLayout
                android:id="@+id/id_tab_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/li_white"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabIndicatorHeight="@dimen/li_2.5dp_size"
                app:tabTextAppearance="@style/tabTextAppearance"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabTextColor="@color/half_black" >
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招标代理机构"
                    />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中标信息"
                    />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="质疑"
                    />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投诉"
                    />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评标委员会"
                    />
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他投标人"
                    />
                </android.support.design.widget.TabLayout>


            <View
                android:layout_width="1px"
                android:layout_height="@dimen/li_75dp_size"
                android:background="@color/li_divider_line_outline"
                ></View>

            <LinearLayout
                android:id="@+id/id_expand_btn"
                android:layout_width="@dimen/li_75dp_size"
                android:layout_height="match_parent"
                android:layout_marginLeft="1px"
                android:background="@drawable/selector_white_gray_view"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/li_4dp_size"
                android:paddingRight="@dimen/li_4dp_size">

                <ImageView
                    android:id="@+id/id_expand_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_expand_on" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar_layout"
        >

        <com.gyiscas.smartbidding.ui.widget.displayComponents.ComplexRecyclerView
            android:id="@+id/complex_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.gyiscas.smartbidding.ui.widget.displayComponents.ComplexRecyclerView>

        <include layout="@layout/layout_progress_bar"         android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>


