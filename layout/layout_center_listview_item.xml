<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLl"
    style="@style/common_lv_corners_item_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/li_24dp_size"
        android:layout_height="@dimen/li_24dp_size"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:src="@drawable/fankui" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/li_8dp_size"
        android:layout_weight="1"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/li_16sp_size"
        tools:text="用户反馈" />

    <ImageView
        android:layout_width="@dimen/li_10dp_size"
        android:layout_height="@dimen/li_10dp_size"
        android:alpha="0.6"
        android:focusable="false"
        android:src="@mipmap/arrow" />

</LinearLayout>